{
  "singleQuote": true,
  "printWidth": 120,
  "trailingComma": "none",
  "requirePragma": false,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "react", "react-router", "react-router-dom", "date-fns", "socket.io*", "@tanstack/*", "zustand*",
    "^api/(.*)$", "^assets/(.*)$", "^components/(.*)$",  "^config/(.*)$", "^hooks/(.*)$", "^models/(.*)$", "^pages/(.*)$", "^providers/(.*)$", "^store/(.*)$", "^utils/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
